<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
        <RadioButton Content="10"  Checked="RadioButton_Checked"/>
        <RadioButton Content="20" Checked="RadioButton_Checked"/>
        <RadioButton Content="30"  Checked="RadioButton_Checked"/>
    </StackPanel>
        <StackPanel DockPanel.Dock="Top">
        <RadioButton Content="Left"  Checked="LeftRadioButton_Checked2" />
        <RadioButton Content="Right"  Checked="RightRadioButton_Checked2"/>
        <RadioButton Content="Center"  Checked="CenterRadioButton_Checked2"/>
        </StackPanel>
        <TextBox TextWrapping="Wrap" x:Name="TextBox"/>
    </DockPanel>
</Window>
